{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Python Agent",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/run-sitl-with-agent.sh",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*$",
                    "endsPattern": "^Python agent started.*$"
                }
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        {
            "label": "Stop Python Agent",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/stop-python-agent.sh",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        }
    ]
}
